<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@color/black</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/greyDark</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="MatchParentDimensionsViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParentEdgesViewStyle">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="TextAppearanceTitle">
        <item name="android:fontFamily">@font/bull_bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TextAppearanceHeadline">
        <item name="android:fontFamily">@font/bull_bold</item>
        <item name="android:textSize">28dp</item>
        <item name="lineHeight">32dp</item>
    </style>

    <style name="TextAppearanceSubtitle1">
        <item name="android:fontFamily">@font/bull_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearanceSubtitle2">
        <item name="android:fontFamily">@font/bull_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearanceBody1">
        <item name="android:fontFamily">@font/bull_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="TextAppearanceBody2">
        <item name="android:fontFamily">@font/bull_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearanceButton">
        <item name="android:fontFamily">@font/bull_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearanceCaption">
        <item name="android:fontFamily">@font/bull_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">16dp</item>
    </style>

    <!-- Component Styles -->
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/primary_color</item>
        <item name="android:itemBackground">@drawable/ripple_primary</item>
        <!--<item name="android:textColor">@color/red_bull_white</item>-->
    </style>

    <style name="ThemeOverlay.RBTV.Toolbar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="ThemeOverlay.RBTV.Toolbar.Popup" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Below is deprecated. Instead, use textAppearance attributes from the theme (ie, textAppearanceTitle) -->
    <style name="regular">
        <item name="android:fontFamily">@font/bull_regular</item>
    </style>

    <style name="bold">
        <item name="android:fontFamily">@font/bull_bold</item>
    </style>

    <style name="headline_base" parent="bold">
        <item name="android:textSize">28dp</item>
        <item name="lineHeight">32dp</item>
    </style>

    <style name="section_title_base" parent="bold">
        <item name="android:textSize">21dp</item>
    </style>

    <style name="card_title_base" parent="bold">
        <item name="android:textSize">16dp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="body_base" parent="regular">
        <item name="android:textSize">16dp</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="caption_text_large_base" parent="regular">
        <item name="android:textSize">16dp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="caption_text_small_base" parent="regular">
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">16dp</item>
    </style>

    <style name="tab_bar_item_label_base" parent="regular">
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">14dp</item>
    </style>

    <!--<style name="ThemeOverlay.Brand.Toolbar.Popup" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorControlHighlight">@color/red_bull_white</item>
    </style>

    <style name="NavItem">
        <item name="navItemShowLabels">@bool/nav_item_show_labels</item>
        <item name="navItemOrientation">@integer/nav_item_orientation</item>
    </style>-->

    <style name="loginTitleText" parent="@style/TextAppearanceTitle" />

    <style name="MatButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@null</item>
        <item name="colorPrimary">@null</item>
        <item name="colorOnSurface">@null</item>
    </style>

    <style name="SocialLoginButtonStyle">
        <item name="android:fontFamily">@font/bull_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TabBarStyle" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/bull_bold</item>
    </style>

    <style name="TabBarItemOffStyle" parent="TabBarStyle">
        <item name="android:fontFamily">@font/bull_medium</item>
    </style>

    <style name="TabBarItemOnStyle">
        <item name="android:fontFamily">@font/bull_bold</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

</resources>