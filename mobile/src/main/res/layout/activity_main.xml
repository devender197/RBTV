<?xml version="1.0" encoding="utf-8"?>
<com.nousguide.android.common.commom.CommonView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nousguide.android.customapp.core.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/tabBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/tabBar"
        style="@style/TabBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blueDark"
        android:visibility="gone"
        app:itemIconTint="@drawable/tab_bar_selector"
        app:itemTextAppearanceActive="@style/TabBarItemOnStyle"
        app:itemTextAppearanceInactive="@style/TabBarItemOffStyle"
        app:itemTextColor="@drawable/tab_bar_selector"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_bottom_nav" />

</com.nousguide.android.common.commom.CommonView>